<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_mesh_gradient">

    <!-- Floating Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/royal_pure_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_login_mesh_gradient"
            android:padding="32dp">

            <!-- Logo -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo"
                android:scaleType="centerInside"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <!-- School Name / Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_title"
                android:textColor="@color/royal_primary_blue"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hệ thống Quản lý Học đường"
                android:textColor="@color/royal_text_muted"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"/>

            <!-- Role Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/role_label"
                android:textColor="@color/royal_text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spRole"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_login_spinner"
                android:paddingStart="16dp"
                android:layout_marginBottom="16dp"/>

            <!-- Username Input -->
            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_login_input"
                android:hint="@string/username_hint"
                android:textColor="@color/royal_text_primary"
                android:textColorHint="@color/royal_text_muted"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Password Input -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_login_input"
                android:hint="@string/password_hint"
                android:textColor="@color/royal_text_primary"
                android:textColorHint="@color/royal_text_muted"
                android:inputType="textPassword"
                android:padding="12dp"
                android:layout_marginBottom="24dp"/>

            <!-- Captcha Layout -->
            <LinearLayout
                android:id="@+id/layoutCaptcha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginBottom="16dp">
                <TextView
                    android:id="@+id/tvCaptchaQuestion"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_login_input"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="12dp"
                    android:text=""
                    android:textColor="@color/royal_text_primary"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/etCaptchaAnswer"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_login_input"
                    android:hint="@string/captcha_hint"
                    android:inputType="number"
                    android:padding="12dp"/>
            </LinearLayout>

            <!-- Login Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_login_button"
                android:text="@string/login_button"
                android:textColor="@color/royal_pure_white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="16sp"/>

            <!-- Forgot Password -->
            <TextView
                android:id="@+id/tvForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:textColor="@color/royal_primary_blue"
                android:textStyle="bold"/>

            <!-- OTP Login Button (Hidden) -->
            <Button
                android:id="@+id/btnOtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/otp_login"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>